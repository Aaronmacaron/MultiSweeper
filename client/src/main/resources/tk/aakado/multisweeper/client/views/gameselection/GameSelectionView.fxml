<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?><?import javafx.scene.control.Button?><?import javafx.scene.control.ButtonBar?><?import javafx.scene.control.Label?><?import javafx.scene.control.ListView?><?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="600.0" styleClass="box" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tk.aakado.multisweeper.client.views.gameselection.GameSelectionView" stylesheets="/tk/aakado/multisweeper/client/views/css/ui.css">
    <Label styleClass="subtitle" text="Select a game to join" />
    <ListView fx:id="gamesListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="10.0" left="75.0" right="75.0" top="10.0" />
        </VBox.margin>
    </ListView>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
      <buttons>
          <Button fx:id="joinButton" defaultButton="true" mnemonicParsing="false" onAction="#onJoin" text="Join" />
          <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
      </buttons>
    </ButtonBar>
</VBox>
