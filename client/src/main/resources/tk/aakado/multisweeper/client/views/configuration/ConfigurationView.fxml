<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tk.aakado.multisweeper.client.views.configuration.ConfigurationView">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Configure">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Password (if required)">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox spacing="10.0">
                     <children>
                        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Save" />
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <Label text="Mine density">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Min" />
                        <Slider fx:id="mineDensitySlider" blockIncrement="0.05" majorTickUnit="0.1" max="1.0" minorTickCount="5" showTickMarks="true" HBox.hgrow="ALWAYS" />
                        <Label text="Max" />
                     </children>
                  </HBox>
                  <Label text="Field width">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldWidthField" />
                  <Label text="Field height">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldHeightField" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Players">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <ListView fx:id="playersList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <buttons>
          <Button cancelButton="true" mnemonicParsing="false" onAction="#onLeave" text="Leave Game" />
            <Button fx:id="startButton" defaultButton="true" mnemonicParsing="false" onAction="#onStart" text="Start!" />
        </buttons>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </ButtonBar>
   </children>
</VBox>
