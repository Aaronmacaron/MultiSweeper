<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox  prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tk.aakado.multisweeper.client.views.configuration.ConfigurationView" stylesheets="/tk/aakado/multisweeper/client/views/css/ui.css">
   <children>
      <HBox styleClass="box">
         <children>
            <VBox HBox.hgrow="ALWAYS" styleClass="box">
               <children>
                  <Label text="Configure" styleClass="title" />
                  <Label text="Password (if required)" styleClass="subtitle"/>
                  <HBox styleClass="box">
                     <children>
                        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Save" />
                     </children>
                  </HBox>
                  <Separator/>
                  <Label text="Mine density" styleClass="subtitle"/>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Min" />
                        <Slider fx:id="mineDensitySlider" blockIncrement="0.05" majorTickUnit="0.1" max="1.0" min="0.01" minorTickCount="5" showTickMarks="true" HBox.hgrow="ALWAYS" />
                        <Label text="Max" />
                     </children>
                  </HBox>
                  <Label text="Field width" styleClass="subtitle"/>
                  <TextField fx:id="fieldWidthField" />
                  <Label text="Field height" styleClass="subtitle"/>
                  <TextField fx:id="fieldHeightField" />
               </children>
            </VBox>
            <VBox styleClass="box" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Players" styleClass="subtitle"/>
                  <ListView fx:id="playersList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
      <ButtonBar VBox.vgrow="ALWAYS" styleClass="box">
        <buttons>
          <Button cancelButton="true" mnemonicParsing="false" onAction="#onLeave" text="Leave Game" />
            <Button fx:id="startButton" defaultButton="true" mnemonicParsing="false" onAction="#onStart" text="Start!" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
