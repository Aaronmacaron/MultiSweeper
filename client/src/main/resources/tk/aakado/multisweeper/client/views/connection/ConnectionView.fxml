<?import javafx.scene.control.Button?><?import javafx.scene.control.Label?><?import javafx.scene.control.TextField?><?import javafx.scene.layout.VBox?>
<VBox prefHeight="100.0" prefWidth="300.0" styleClass="box" stylesheets="/tk/aakado/multisweeper/client/views/css/ui.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tk.aakado.multisweeper.client.views.connection.ConnectionView">
    <children>
        <Label text="Connect to server" styleClass="subtitle"/>
        <TextField fx:id="connectionField" promptText="hostname or server" />
        <Button defaultButton="true" mnemonicParsing="false" onAction="#onConnect" text="Connect" fx:id="connectButton"/>
      <Label text="Error while connecting (check spelling of hostname and connection)" visible="false" fx:id="errorMessageLabel" styleClass="error-description"/>
    </children>
</VBox>
